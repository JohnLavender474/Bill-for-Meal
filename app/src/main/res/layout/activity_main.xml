<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <!-- Title with lines above and below -->

    <!-- Computed value -->
    <View
        android:layout_width="480dp"
        android:layout_height="2dp"
        android:background="#0047AB"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="4dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:text="@string/bill_for_meal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="480dp"
        android:layout_height="2dp"
        android:background="#0047AB" />

    <TextView
        android:id="@+id/computedValueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="@string/_0_00"
        android:gravity="center"
        android:textSize="48sp"
        android:layout_marginBottom="16dp"/>

    <!-- Total cost input field -->
    <EditText
        android:id="@+id/totalCostEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/total_cost"
        android:inputType="numberDecimal"
        android:layout_marginBottom="12dp"
        android:autofillHints="Total cost" />

    <!-- Number of diners input field -->
    <EditText
        android:id="@+id/numberOfDinersEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number_of_diners"
        android:inputType="number"
        android:layout_marginBottom="12dp"
        android:autofillHints="Number of diners" />

    <!-- Tip percentage buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/_10"
            android:id="@+id/tip10Button"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/_15"
            android:id="@+id/tip15Button"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/_20"
            android:id="@+id/tip20Button"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>
